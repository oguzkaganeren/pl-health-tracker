<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/tension_card"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="Tension"
        app:icon="@drawable/ic_tension_green_24dp"
        app:inner_view="@layout/tension"
        app:expandOnClick="true" />
    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/sugar_card"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="Blood Sugar(mmol/L)"
        app:icon="@drawable/ic_blood_red_24dp"
        app:inner_view="@layout/blood_sugar"
        app:expandOnClick="true" />
    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/heart_card"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="Heart Rate(bpm)"
        app:icon="@drawable/ic_health_red_24dp"
        app:inner_view="@layout/heart_rate"
        app:expandOnClick="true" />
    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/weight_card"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="Weight(kg)"
        app:icon="@drawable/ic_iso_black_24dp"
        app:inner_view="@layout/pht_weight"
        app:expandOnClick="true" />
    <TextView
        android:id="@+id/txt_pht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="25dp" />


    </LinearLayout>