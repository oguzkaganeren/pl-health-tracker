        android:id="@+id/heartChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"/>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/weightChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"/>

